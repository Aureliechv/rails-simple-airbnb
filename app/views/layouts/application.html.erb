<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <%= link_to "✨ Simple Airbnb ✨", flats_path, class: "navbar-brand" %>
      <form action = "/", class="form-inline">
        <input class="form-control mr-sm-2" name="query" id= "query" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-info my-2 my-sm-0" type="search">Search</button>
        &nbsp;&nbsp;
        <%= link_to "Add a flat", new_flat_path, class: "btn btn-outline-warning" %>
      </form>
    </nav>
    <%= yield %>
  </body>
</html>
